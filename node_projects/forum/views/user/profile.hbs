<h2>Profil uporabnika</h2>
<h3>Ime: </h3>
<h4>{{usr.username}}</h4>
<h3>Mail: </h3>
<h4>{{usr.email}}</h4>
<br><a type="button" href="logout">Odjava</a>
<hr>

{{#each qst}}
    <div id="{{_id}}">
        <h3>{{title}}</h3> <br>
        <p>{{content}}</p> <br>
        <p>Objavljeno: {{postdate}}</p> <br>
        <p>Tags: {{tags}}</p>
        <form action="/questions/{{_id}}" method="get">
            <input type="submit" value="Pokaži več">
        </form>
    </div>
    <hr style="border-color:grey;">
{{/each}}