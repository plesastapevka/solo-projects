{{#if lastnik.isowner}}
    {{#each ans}}
        <div id="{{_id}}">
            <p style="font-size: 16px">{{username}}</p> <br>
            <p>{{content}}</p> <br>
        </div>
        <form action="/answers/accept/{{_id}}" method="get">
            <input type="submit" value="Sprejmi odgovor">
        </form>
        <hr style="border-color:grey;">
    {{/each}}

{{else}}
    {{#each ans}}
        <div id="{{_id}}">
            <p style="font-size: 16px">{{username}}</p> <br>
            <p>{{content}}</p> <br>
        </div>
        <hr style="border-color:grey;">
    {{/each}}
{{/if}}



{{#if user}}
