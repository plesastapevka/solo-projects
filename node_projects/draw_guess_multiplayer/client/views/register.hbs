<style>.row { padding: 5px; margin: 5px; }</style>
<div id="login">

    <h1>Can you <strong>GUESS IT?</strong></h1>

    <div class="register-box shadow">
        <form action="/register" method='post' class='login-form'>
            <div class="row">
                <i id='username' class='icon-user'></i>
                <input id="username" autocomplete="off" placeholder="Username" class='dark' type="text" name="username">
            </div>
            <div class="row">
                <i id='password' class='icon-lock'></i>
                <input id="password" autocomplete="off" placeholder="Password" class='dark' type="password"
                    name="password">
            </div>
            <div class="row">
                <i id='repeatPassword' class='icon-lock'></i>
                <input id="password" autocomplete="off" placeholder="Repeat password" class='dark' type="password"
                    name="repeatPassword">
            </div>
            <div class="row">
                <input type="submit" class='btn btn-primary' value="Register">
            </div>
        </form>
    </div>

    <div class="login-footer">
        <p style="color:red;">{{ message }}</p>
        <a href="/login">Already have an account?</a>
    </div>

</div>