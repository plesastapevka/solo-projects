<Window x:Class="hill_shading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hill_shading"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="415">
    <Grid Background="#FF3F3F46">
        <Image x:Name="image" HorizontalAlignment="Left" Height="404" Margin="10,10,0,0" VerticalAlignment="Top" Width="262"/>
        <Button x:Name="open" Content="Open" HorizontalAlignment="Left" Margin="10,419,0,0" VerticalAlignment="Top" Width="75" Click="open_Click"/>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="322,419,0,0" VerticalAlignment="Top" Width="75" Click="start_Click"/>
        <TextBox x:Name="azimuthBox" HorizontalAlignment="Left" Height="23" Margin="277,10,0,0" TextWrapping="Wrap" Text="230" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="zenithBox" HorizontalAlignment="Left" Height="23" Margin="277,38,0,0" TextWrapping="Wrap" Text="38" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Visibility="Hidden" Margin="277,66,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
